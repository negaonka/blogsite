{{#if logged_in}}<form
    width="100%"
    class="submitpost"
    onsubmit="setTimeout(function(){window.location.reload();},10);"
  ><label><h3>Post Title</h3></label><br />
    <input class="post-title-input" type="text" width="300px" id="ptinput" /><br
    /><label><h3>Post Content</h3></label><br />
    <textarea
      class="post-title-input"
      type="text"
      cols="40"
      rows="5"
      id="pstcnt"
    ></textarea><label for="category"><h3>Choose a Category:</h3></label>

    <select name="category" id="cat">
      {{#each categories}}<option value="{{id}}">{{catname}}</option>{{/each}}
    </select><br /><button
      type="submit"
      class="btn btn-primary"
    >Post</button></form>{{else}}
  <h3 class="login-prompt">Login or register to create a post </h3>{{/if}}
{{#each posts}}
  <div class="card mb-3" style="width: 80%;">
    <div class="row g-0">
      {{! <div class="col-md-4">
        <img src="..." class="img-fluid rounded-start" alt="..." />
      </div> }}
      <div class="col-md-12">
        <div class="card-body">
          <a href="/posts/{{id}}"><h2 class="card-title">{{title}} </h2></a>
          <p class="card-text">{{content}}</p>
          <div class="meta"><h5 class="card-title left">User:
              <a href="/postsbyuser/{{user.id}}">{{user.name}}</a>
            </h5>
            <h5 class="card-title right">Category:
              <a href="/postsbycat/{{category.id}}">{{category.catname}}
              </a></h5>
            <p class="card-text"><small class="text-muted">Posted:
                {{format_time date}}</small></p></div>
          <div class="comments">
            {{#if comments.length}}<h3>Comments</h3>{{/if}}
            <ul class="list-group list-group-flush">
              {{comment.comment}}
              -

              <li class="list-group-item">{{comments.comment}}
                -

                {{comment.name}}

              </li>

            </ul>

          </div></div>
        {{!-- {{#if logged_in}} --}}
        {{!-- <div class="commentform"><h3>Leave a comment</h3>

          <form
            width="100%"
            class="leavecomment"
            id="leavecomment"
            onsubmit="setTimeout(function(){window.location.reload();},10);"
          >

            <input
              class="postid"
              type="number"
              width="300px"
              id="pstid"
              value="{{id}}"
            />
            <textarea
              class="comments"
              type="text"
              cols="40"
              rows="5"
              id="comment"
            ></textarea><br /><button
              type="submit"
              class="btn btn-primary"
            >Comment</button></form>
          {{!-- {{else}}
          <h3>Please <a href="/login">sign in</a> to leave a comment</h3>{{/if}} --}}
        {{! </div> }}

      </div>
    </div></div>{{/each}}

<script src="/js/post.js"></script>
{{! <script src="/js/comment.js"></script> }}